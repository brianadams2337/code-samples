/* CSS StyleSheet - HEADER and NAVIAGTION */

header {
	width: 100%;
	background: url(../images/bgTexture.jpg) 0px 0px repeat-x;
	margin-bottom: 0px;
}

#logoMain {
	position: absolute;
	top: 342px;
	width: 144px;
	height: 138px;
	background-image: url(../images/logoMain.png);
	margin-left: 24px;
}

#logoMainInner {
	position: absolute;
	top: 15px;
	width: 115px;
	height: 110px;
	background-image: url(../images/logoMainInner.png);
}

/* NAVIGATION */

#navigationMain, #navigationSecondary {
	text-align: right;
}

#navigationMain {
	height: 48px;
}

#navigationSecondary {
	height: 92px;
}

#navigationMain a {
	font-family: Raleway, Verdana, Arial, sans-serif;
	font-size: 18px;
	color: #FFFFFF;
	text-decoration: none;
	display:-moz-inline-stack;
	display:inline-block;
	zoom:1;
	*display:inline;
	margin: 15px 0px 0px 45px;
}

#navigationMain a:hover {
	color: #88d4e3;
}

#navigationSecondary a {
	font-family: Justus, Georgia, Garamond, serif;
	font-size: 16px;
	color: #009fc2;
	font-style: italic;
	text-decoration: none;
	display:-moz-inline-stack;
	display:inline-block;
	zoom:1;
	*display:inline;
	margin: 4px 0px 0px 45px;
}

#navigationSecondary a:hover {
	color: #333333;
}