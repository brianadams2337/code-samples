/* CSS StyleSheet - GOOGLE MAP */

#formGoogleMaps input {
	width: 220px;
}

#directions {
	height: 300px;
	width: 320px;
	overflow-y: scroll;
	margin-bottom: 24px;
	display: none;
}
/* marker at top and bottom of directions */
.adp-placemark {
	background: #353535 url(../images/bgTexture.jpg) 0px 0px repeat;
	-webkit-box-shadow: inset 0px 0px 50px rgba(0,0,0,0.75); /* Saf3-4, iOS 4.0.2 - 4.2, Android 2.3+ */
	-moz-box-shadow: inset 0px 0px 50px rgba(0,0,0,0.75); /* FF3.5 - 3.6 */
	box-shadow: inset 0px 0px 50px rgba(0,0,0,0.75); /* Opera 10.5, IE9, FF4+, Chrome 6+, iOS 5 */	
	padding: 10px;
	margin: 0px;
	border: none;
}
/* text within marker */
.adp-placemark td {
	color: #B1C377;
}
/* summary at top of directions */
.adp-summary {
	padding: 12px 0px;
	margin-left: 30px;
}
/* text within summary */
.adp-summary span {
	font-family: Raleway, Verdana, Arial, sans-serif;
	font-weight: bold;
	font-style: italic;
	color: #009FC2;
}
/* directions container */
.adp-directions {
	margin-left: 10px;
}
/* individual directions */
.adp-step, .adp-substep {
	background: url(../images/lineDotted.gif) 0px 0px repeat-x;
	border: none;
	margin: 0px;
	padding: 6px 3px;
	vertical-align: top;
}
.adp-substep div {
	font-family: Raleway, Verdana, Arial, sans-serif;
	font-size: 14px;
	font-style: italic;
	color: #009FC2;
}
/* legal notice at bottom of directions */
.adp-legal {
	background: #111111;
	font-size: 10px;
	text-align: right;
	padding: 0px 12px;
	color: white;
}